{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Build Current File",
            "type": "shell",
            "command": "cd ${workspaceFolder} && ([ -f build/CMakeCache.txt ] || cmake -S . -B build) && cmake --build build --target ${fileBasenameNoExtension}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Run Current File",
            "type": "shell",
            "command": "./build/c_example/part1/${fileBasenameNoExtension}",
            "dependsOn": "CMake: Build Current File",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Build and Run Current File",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake: Build Current File",
                "CMake: Run Current File"
            ],
            "group": {
                "kind": "none"
            },
            "problemMatcher": []
        }
    ]
}